 * Order+
 *
 * Order+ is an extension for CMS Opencart 3.x Admin Panel.
 * It extends displayed information in order list and e-mails, also adds product images in invoices, shopping lists and e-mails.
 *
 * @author		Andrii Burkatskyi aka underr underr.ua@gmail.com
 * @copyright	Copyright (c) 2019 Andrii Burkatskyi
 * @license		https://raw.githubusercontent.com/underr-ua/ocmod3-order-plus/master/EULA.txt End-User License Agreement
 *
 * @version		1.2
 *
 * @see			https://www.opencart.com/index.php?route=marketplace/extension/info&extension_id=37121
 * @see			https://underr.space/notes/projects/project-017.html
 * @see			https://github.com/underr-ua/ocmod3-order-plus
#}

{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button
                    class="btn btn-primary"
                    data-toggle="tooltip"
                    form="form-module"
                    title="{{ button_save }}"
                    type="submit">
                    <i class="fa fa-save"></i>
                </button>
                <a
                    class="btn btn-default"
                    data-toggle="tooltip"
                    href="{{ cancel }}"
                    title="{{ button_cancel }}">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}
            </h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">
                            {{ breadcrumb.text }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_permission %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i>
                {{ error_permission }}
                <button
                    class="close"
                    data-dismiss="alert"
                    type="button">
                    &times;
                </button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>
                    {{ text_edit }}
                </h3>
            </div>
            <div class="panel-body">
                <form
                    action="{{ action }}"
                    class="form-horizontal"
                    id="form-module"
                    enctype="multipart/form-data"
                    method="post">
                    <ul class="nav nav-tabs" id="tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#tab-general">
                                {{ entry_tab_general }}
                            </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-order">
                                {{ entry_tab_order }}
                            </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-email">
                                {{ entry_tab_email }}
                            </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-support">
                                {{ entry_tab_support }}
                            </a>
                        </li>
                        {# <li><a data-toggle="tab" href="#tab-checkout">{{ entry_tab_checkout }}</a></li> #}
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-general">
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-right" for="select-status">
                                    {{ entry_status }}
                                </label>
                                <div class=" col-sm-9 text-left">
                                    <select
                                        class="form-control"
                                        id="select-status"
                                        name="module_order_plus_status">
                                        {% if status %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label text-right" for="input-image-width">
                                    {{ entry_image_width }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <input
                                        class="form-control"
                                        id="input-image-width"
                                        min="1"
                                        name="module_order_plus_image_width"
                                        step="1"
                                        type="number"
                                        value="{{ image_width }}"/>
                                </div>
                                <label class="col-sm-3 control-label text-right" for="input-image-height">
                                    {{ entry_image_height }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <input
                                        class="form-control"
                                        id="input-image-height"
                                        min="1"
                                        name="module_order_plus_image_height"
                                        step="1"
                                        type="number"
                                        value="{{ image_height }}"/>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab-order">
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-right" for="select-customer-info">
                                    {{ entry_customer_info }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-customer-info"
                                        name="module_order_plus_customer_info">
                                        {% if customer_info == 'S' %}
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option selected="selected" value="S">
                                                {{ text_shipping }}
                                            </option>
                                            <option value="P">
                                                {{ text_payment }}
                                            </option>
                                        {% elseif customer_info == 'P'%}
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option value="S">
                                                {{ text_shipping }}
                                            </option>
                                            <option selected="selected" value="P">
                                                {{ text_payment }}
                                            </option>
                                        {% else %}
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option value="S">
                                                {{ text_shipping }}
                                            </option>
                                            <option  value="P">
                                                {{ text_payment }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-right" for="select-info-image">
                                    {{ entry_order_image }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-info-image"
                                        name="module_order_plus_order_image">
                                        {% if order_image %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-right" for="select-invoice-image">
                                    {{ entry_invoice_image }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-invoice-image"
                                        name="module_order_plus_invoice_image">
                                        {% if invoice_image %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label
                                    class="col-sm-3 control-label text-right"
                                    for="select-shipping-image">
                                    {{ entry_shipping_image }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-shipping-image"
                                        name="module_order_plus_shipping_image">
                                        {% if shipping_image %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label
                                    class="col-sm-3 control-label text-right"
                                    for="select-account-image">
                                    {{ entry_account_order_image }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-account-image"
                                        name="module_order_plus_account_order_image">
                                        {% if account_order_image %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label
                                    class="col-sm-3 control-label text-right"
                                    for="select-account-link">
                                    {{ entry_account_order_link }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-account-link"
                                        name="module_order_plus_account_order_link">
                                        {% if account_order_link %}
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% else %}
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab-email">
                            <div class="form-group">
                                <label
                                    class="col-sm-3 control-label text-right"
                                    for="select-admin-email">
                                    {{ entry_admin_email }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-admin-email"
                                        name="module_order_plus_admin_email">
                                        {% if not admin_email %}
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                        {% else %}
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label
                                    class="col-sm-3 control-label text-right"
                                    for="select-email-images">
                                    {{ entry_email_images }}
                                </label>
                                <div class="col-sm-3 text-left">
                                    <select
                                        class="form-control"
                                        id="select-email-images"
                                        name="module_order_plus_email_images">
                                        {% if not email_images %}
                                            <option selected="selected" value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option value="1">
                                                {{ text_enabled }}
                                            </option>
                                        {% else %}
                                            <option value="">
                                                {{ text_disabled }}
                                            </option>
                                            <option selected="selected" value="1">
                                                {{ text_enabled }}
                                            </option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab-support">
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-4">
                                    <div class="well">
                                        <a
                                            href="https://www.opencart.com/index.php?route=marketplace/extension/info&extension_id=37121"
                                            class="btn btn-primary btn-lg btn-block"
                                            target="_blank">
                                            Buy/Get Support
                                        </a>
                                        <a
                                            href="https://www.opencart.com/index.php?route=marketplace/extension&amp;filter_member=ocmod.space"
                                            class="btn btn-default btn-lg btn-block"
                                            target="_blank">
                                            View all extensions
                                        </a>
                                        <a href="https://underr.space/en/notes/projects/project-017.html" class="btn btn-default btn-lg btn-block" target="_blank">
                                            Homepage
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        © Copyright 2018-{{ 'now'|date('Y') }} Andrii Burkatskyi aka underr
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
