    }

    if (!parseInt($('#input-image-height').val()) || parseInt($('#input-image-height').val()) <= 0) {
        $('#input-image-height').val('74');
    } else {
        Math.abs(parseInt($('#input-image-height').val()));
    }

    //-->
</script>
{{ footer }}
